<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="
		http://www.springframework.org/schema/webflow
		http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <var name="flowHandler" class="org.jahia.modules.databaseConnector.webflow.DatabaseConnectorFlowHandler"/>

    <view-state id="registeredConnections">
        <on-render>
            <evaluate expression="flowHandler.findRegisteredConnections()" result="flowScope.registeredConnections"/>
            <!--<evaluate expression="flowHandler.hasTextEncryptor()" result="flowScope.hasTextEncryptor"/>-->
        </on-render>
        <transition on="addConnection" to="selectDatabaseType">
            <set name="flowScope.isEdition" value="false" type="boolean"/>
        </transition>
        <transition on="editConnection" to="enterConfig">
            <evaluate expression="flowHandler.getConnection(requestParameters.databaseId, requestParameters.databaseType)" result="flowScope.connection"/>
            <set name="flowScope.isEdition" value="true" type="boolean"/>
        </transition>
        <transition on="removeConnection" to="registeredConnections">
            <evaluate expression="flowHandler.removeConnection(requestParameters.databaseId, requestParameters.databaseType)"/>
        </transition>
    </view-state>

    <view-state id="selectDatabaseType">
        <on-render>
            <evaluate expression="flowHandler.findAllDatabaseTypes()" result="flowScope.allDatabaseTypes"/>
        </on-render>
        <transition on="setDatabaseType" to="enterConfig">
            <evaluate expression="flowHandler.initConnection(requestParameters.databaseType)" result="flowScope.connection"/>
            <set name="flowScope.isEdition" value="false" type="boolean"/>
        </transition>
        <transition on="cancel" to="registeredConnections"/>
        <transition on="back" to="registeredConnections"/>
    </view-state>

    <view-state id="enterConfig" model="connection">
        <transition on="submit" to="connectionAddedEdited">
            <evaluate expression="flowHandler.addEditConnection(connection, isEdition)"/>
        </transition>
        <transition on="back" to="selectDatabaseType" validate="false" bind="false"/>
        <transition on="cancel" to="registeredConnections" validate="false" bind="false"/>
    </view-state>

    <end-state id="connectionAddedEdited"/>

</flow>
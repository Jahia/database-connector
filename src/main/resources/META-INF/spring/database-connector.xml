<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!--OSGi Service-->
    <bean class="org.jahia.modules.databaseConnector.connection.DatabaseConnectorManager" id="databaseConnectorManager" factory-method="getInstance"/>

    <!--Choice List Initializers-->
    <bean id="springBeansAccess" class="org.jahia.modules.databaseConnector.api.SpringBeansAccess"
          factory-method="getInstance">
        <property name="databaseConnectorManager" ref="databaseConnectorManager"/>
        <property name="jcrTemplate" ref="jcrTemplate"/>
    </bean>
</beans>
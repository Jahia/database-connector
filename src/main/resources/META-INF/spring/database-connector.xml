<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd


       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd">

    <context:spring-configured/>
    <context:annotation-config/>

    <!--OSGi Service-->
    <bean class="org.jahia.modules.databaseConnector.DatabaseConnectorManager" id="databaseConnectorManager" factory-method="getInstance"/>
    <osgi:service ref="databaseConnectorManager" interface="org.jahia.modules.databaseConnector.DatabaseConnectorOSGiService"/>

    <!--Choice List Initializers-->
    <bean id="mongoWriteConcernChoiceListInitializer" class="org.jahia.modules.databaseConnector.mongo.initializer.WriteConcernChoiceListInitializer"/>

</beans>